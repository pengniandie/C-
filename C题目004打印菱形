#include<stdio.h>
int main()
{
    for(int i=0; i<4; i++)
    {
        for(int j=0; j<3-i ; j++) //解决空格
        {
            printf(" ");
        }
        for(int k=0; k<2*i+1; k++) //解决星号
        {
            printf("*");
        }
        
        printf("\n");
    }
    for(int i=0; i<3; i++)
    {
        for(int j=0; j<i+1; j++)   //空格
        {
            printf(" ");
        }
        for(int k=0; k<5-2*i  ; k++)  //星号
        {
            printf("*");
        }
        printf("\n");
    }
}

//行数  空格  星号
//1  3  1
//2  2  3
//3  1  5
//4  0  7

//5  1  5
//6  2  3
//7  3  1
